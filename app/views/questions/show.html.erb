<%= content_for :title, "Questions ##{@question.id}" %>
<%= turbo_stream_from @question %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Questions", questions_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Question #<%= @question.id %>
    </h1>
    <% if admin? %>
      <%= link_to t("edit"), edit_question_path(@question), class: "btn btn-white" %>
    <% end %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @question %>
  </div>
</div>
