<%= form_with(model: subject) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), subjects_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), subject_path(@subject), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
